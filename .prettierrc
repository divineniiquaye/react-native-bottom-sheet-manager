{
  "trailingComma": "all",
  "endOfLine": "lf",
  "printWidth": 90,
  "tabWidth": 4,
  "semi": true,
  "overrides": [
    {
      "files": [
        "*.jsx",
        "*.tsx",
        "*.json",
        "*.prettierrc"
      ],
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": [
        "*.ts",
        "*.js"
      ],
      "options": {
        "tabWidth": 4
      }
    }
  ],
  "importOrderSortByLength": true,
  "importOrderCaseSensitive": false,
  "importOrder": [
    "<BUILTIN_MODULES>",
    "",
    "<THIRD_PARTY_MODULES>",
    "",
    "^(@niibase)(/.*)$",
    "",
    "^[.]"
  ],
  "plugins": [
    "@ianvs/prettier-plugin-sort-imports"
  ]
}